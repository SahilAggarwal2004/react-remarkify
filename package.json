{
  "name": "react-remarkify",
  "version": "0.8.2",
  "description": "A simple React.js utility to convert Markdown into React components.",
  "license": "MIT",
  "author": "Sahil Aggarwal <aggarwalsahil2004@gmail.com>",
  "contributors": [],
  "homepage": "https://github.com/SahilAggarwal2004/react-remarkify#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SahilAggarwal2004/react-remarkify.git"
  },
  "bugs": {
    "url": "https://github.com/SahilAggarwal2004/react-remarkify/issues"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/types.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm i && pnpm run compile",
    "compile": "tsup",
    "dev": "tsup --watch",
    "dry-release": "release-it --ci --dry-run",
    "prettier": "prettier-package-json --write package.json",
    "pub": "pnpm login && pnpm publish",
    "release": "release-it --ci"
  },
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "dependencies": {
    "hast-util-to-jsx-runtime": "^2.3.6",
    "rehype-react": "^8.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/react": "^19.2.7",
    "mdast-util-to-hast": "^13.2.1",
    "prettier-package-json": "^2.8.0",
    "release-it": "^19.2.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "jsx",
    "markdown",
    "markdown-parser",
    "markdown-renderer",
    "markdown-to-jsx",
    "markdown-to-react",
    "react",
    "react-components",
    "react-markdown",
    "react-markdown-renderer",
    "react-remarkify",
    "react-utility",
    "remark",
    "typescript"
  ]
}
